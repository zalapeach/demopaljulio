    link(href="/css/styles.css", rel="stylesheet")
  body#page-top
    nav.navbar.navbar-expand-lg.navbar-light.fixed-top.navbar-shrink#mainNav
      .container.px-4.px-lg-5
        a.navbar-brand(href="#page-top") Otro Colima
        button.navbar-toggler.navbar-toggler-right.collapsed(type="button" data-bs-toggle="collapse", data-bs-target="#navbarResponsive", aria-expanded="false", aria-label="Toggle navigation") Menu&nbsp;&nbsp;
          i.fas.fa-bars
        .navbar-collapse.collapse#navbarResponsive
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="#festivals") Festivales
            li.nav-item
              a.nav-link(href="#sports") Deportes
            li.nav-item
              a.nav-link(href="#plan") Haz plan Colima
            li.nav-item
              a.nav-link(href="#boosts") Impulsa Colima
            li.nav-item
              a.nav-link(href="#know") Conoce Colima
            li.nav-item
              a.nav-link(href="#register") Registrate y recibe notificaciones
            li.nav-item
              a.nav-link(href="#chatbot") Chatbot

    header.masthead(style="margin-top: 80px")
      .div(style="position: absolute; left: 50%")
        video(autoplay muted loop style="position: relative; left: -50%;")
          source(src="/videos/avionsito.mp4", type="video/mp4")
        .container.px-4.px-lg-5.d-flex.h-100.align-items-center.justify-content-center(style="position: relative; left: -50%; margin-top: -175%")
          .d-flex.justify-content-center
            .text-center
              h1.mx-auto.my-0.text-uppercase Direccion general de desarrollo economico, social y deportivo
              h2.text-white-50.mx-auto.mt-2.mb-5 Enterate de todas nuestas actividades
              a.btn.btn-primary(href="#festivals") Click aqui

    #carouselExample.carousel.slide
      .carousel-indicators
        button.active(type="button", data-bs-target="#carouselExample", data-bs-slide-to="0", aria-current="true", aria-label="Slide 1")
        button(type="button", data-bs-target="#carouselExample" data-bs-slide-to="1" aria-label="Slide 2")
        button(type="button", data-bs-target="#carouselExample" data-bs-slide-to="2" aria-label="Slide 3")
      .carousel-inner
        .carousel-item.active
          img.d-block.w-100(src="/images/Anuncio 1.png", alt="Slide 1")
        .carousel-item
          img.d-block.w-100(src="/images/Anuncio 2.png", alt="Slide 2")
        .carousel-item
          img.d-block.w-100(src="/images/Anuncio 3.png", alt="Slide 3")
      button.carousel-control-prev(type="button", data-bs-target="#carouselExample", data-bs-slide="prev")
        span.carousel-control-prev-icon(aria-hidden="true")
        span.visually-hidden Previous
      button.carousel-control-next(type="button", data-bs-target="#carouselExample", data-bs-slide="next")
        span.carousel-control-next-icon(aria-hidden="true")
        span.visually-hidden Next

    section#festivals.text-center.festival-section
      .container.px-4.px-lg-5
        .row.gx-4.gx-lg-5.justify-content-center
